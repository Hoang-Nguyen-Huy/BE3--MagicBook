<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.controllers.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SignUpController</servlet-name>
        <servlet-class>com.controllers.SignUpController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpController</servlet-name>
        <url-pattern>/sign-up</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.controllers.HomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ProfileController</servlet-name>
        <servlet-class>com.controllers.ProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileController</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UpdateProfileController</servlet-name>
        <servlet-class>com.controllers.UpdateProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProfileController</servlet-name>
        <url-pattern>/update-profile</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>com.controllers.SearchController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>FriendListController</servlet-name>
        <servlet-class>com.controllers.FriendListController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FriendListController</servlet-name>
        <url-pattern>/friend-list</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GroupController</servlet-name>
        <servlet-class>com.controllers.GroupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GroupController</servlet-name>
        <url-pattern>/group</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CreateGroupController</servlet-name>
        <servlet-class>com.controllers.CreateGroupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateGroupController</servlet-name>
        <url-pattern>/create-group</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>YourGroupsController</servlet-name>
        <servlet-class>com.controllers.YourGroupsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>YourGroupsController</servlet-name>
        <url-pattern>/owned-group</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UpdateGroupController</servlet-name>
        <servlet-class>com.controllers.UpdateGroupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateGroupController</servlet-name>
        <url-pattern>/update-group</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MemberListController</servlet-name>
        <servlet-class>com.controllers.MemberListController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MemberListController</servlet-name>
        <url-pattern>/member-list</url-pattern>
    </servlet-mapping>
    
</web-app>
